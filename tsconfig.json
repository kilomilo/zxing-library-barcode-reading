{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "strict": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["esnext", "dom"],
    "declaration": false,
    "composite": false,
    "sourceMap": false,
    "allowJs": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
